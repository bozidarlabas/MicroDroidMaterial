<resources>

    <!-- Material design theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Material design colors. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FormEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#ffeeeeee</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="ButtonPlain" parent="@style/Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">8.0dip</item>
    </style>

    <style name="FormEditText.Clean" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">#ff555555</item>
        <item name="android:textColorHint">#ff777777</item>
        <item name="android:background">@null</item>
        <item name="android:padding">16.0dip</item>
    </style>

    <style name="ButtonPlain.Clean" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">16.0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextEventName" parent="@style/TextAppearance.AppCompat.Large" />
    <style name="TextEventName.Inverse" parent="@style/TextAppearance.AppCompat.Large.Inverse">
        <item name="android:shadowColor">@color/event_text_shadow</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="TextEventDescription" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ff202020</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="small_ratingbar" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/small_rating_bar</item>
    </style>





</resources>
